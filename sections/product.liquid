{%- liquid
  comment
    Variables
  endcomment

  assign current_variant = product.selected_or_first_available_variant
  assign move_to_next_column = false
  assign image_zoom_enabled = section.settings.image-zoom-enabled
  assign load_model = false
  assign load_video = false
  assign modal_enabled = section.settings.modal-enabled
  assign product_id = product.id | append: '-' | append: section.id
  assign show_breadcrumbs = section.settings.product-breadcrumbs-show
  assign thumbnails_added = false
  assign video_looping_enabled = section.settings.loop-enabled

  for media in product.media
    if media.media_type == "model"
      assign load_model = true
    elsif media.media_type == "video" or media.media_type == "external_video"
      assign load_video = true
    endif

    capture featured_media
      echo featured_media

      if modal_enabled and media.media_type == 'image'
        echo '<div class="modal--link">'
      endif

      render "product--media", media_view: "featured", inside_carousel: false, image_zoom_enabled: image_zoom_enabled, product_media: media, video_looping_enabled: video_looping_enabled

      if modal_enabled and media.media_type == 'image'
        echo '</div>'
      endif
    endcapture

    if product.media.size > 1
      capture thumb_html
        echo thumb_html

        render "product--media", media_view: "thumb", product_media: media, product: product
      endcapture
    endif

    capture modal_media
      echo modal_media

      if media.media_type == 'image'
        echo '<div class="modal--content">'
          render "image", image: media.preview_image
        echo '</div>'
      endif
    endcapture
  endfor
-%}

{% for block in section.blocks %}
  {%- liquid
    if block.type == 'divider'
      assign move_to_next_column = true
      continue
    endif
  -%}

  {%- capture block_html -%}
    <div
      class="product-page--block"
      data-product-block
      data-block-type="{{ block.type }}"
      {{ block.shopify_attributes }}
    >
      {%- case block.type -%}
        {%- when 'overline' -%}
          <div class="product-page--overline" data-item="overline">
            {{ block.settings.text }}
          </div>

        {%- when 'heading' -%}
          <h2 class="product-page--heading" data-item="section-heading" style="text-transform: {% unless block.settings.uppercase %}
            unset !important;
            {% else %}
              uppercase;
          {% endunless %}">
            {{ product.title }}
          </h2>
          {%- liquid
            if product.metafields.custom.set_count
              echo '<div class="product--set-count">'
              echo product.metafields.custom.set_count
              echo ' pice set includes</div>'
            endif
          -%}
        {%- when 'vendor' -%}
          <div
            class="product-page--vendor"
            data-item="light-accent-text"
            itemprop="brand"
            content="{{ product.vendor }}"
          >
            <a href="{{ product.vendor | url_for_vendor }}">
              {{ product.vendor }}
            </a>
          </div>

        {%- when 'price' -%}
          {%- render 'product-price', product: product, id: product_id -%}

        {%- when 'low-stock' -%}
          {%-
            render 'product-low-stock',
            id: product_id,
            current_variant: current_variant,
            threshold: block.settings.threshold
          -%}

        {%- when 'options' -%}
          {%-
            render "product-options",
            id: product_id,
            product: product,
            block_settings: block.settings
          -%}

        {%- when 'quantity-input' -%}
          {%- render 'product-quantity', id: product_id -%}

        {%- when 'buy-buttons' -%}
          {%-
            render 'product-buy-buttons',
            id: product_id,
            product: product,
            smart_payment_enabled: block.settings.smart-payment-enabled
          -%}

        {%- when 'unavailable-form' -%}
          {%- render 'product-unavailable-form', product: product, id: product_id -%}

        {%- when 'pickup' -%}
          {%- render 'product-pickup', product: product, id: product_id -%}

        {%- when 'collapsible-tab' -%}
          {%- render 'collapsible-tab', block: block -%}

        {%- when 'thumbnails' -%}
          {%- assign thumbnails_added = true -%}
          {%- if product.media.size > 1 -%}
            <div
              class="product-page--thumbs"
              data-position="cart-form-column"
              data-mq='medium-large'
            >
              {%
                render "product--media",
                media_view: "thumb-container",
                thumb_html: thumb_html,
                direction: "row",
                product: product
              %}
            </div>
          {%- endif -%}

        {%- when 'description' -%}
          {%- unless product.description == blank -%}
            <div
              class="product-page--description"
              data-item="rte-content"
              itemprop="description"
            >
              <h5>{{product.metafields.accentuate.description_title}}</h5>
              <p>{{product.metafields.accentuate.description}}</p>
            </div>
          {%- endunless -%}

        {%- when 'rating' -%}
          {%- render 'product-rating' -%}

        {%- when 'liquid' -%}
          {{- block.settings.custom-liquid -}}

        {%- when '@app' -%}
          {%- render block -%}

      {%- endcase -%}
    </div>
  {%- endcapture -%}

  {%- liquid
    unless move_to_next_column
      capture left_column_blocks
        echo left_column_blocks
        echo block_html
      endcapture
    else
      capture right_column_blocks
        echo right_column_blocks
        echo block_html
      endcapture
    endunless
  -%}
{%- endfor -%}

{% comment %} View {% endcomment %}
<product-root
  class="product-page--root page-width"
  data-section-id="{{ section.id }}"
  data-section-type="product_page"
  data-product-id="{{ product_id }}"
  data-handle="{{ product.handle }}"
  data-magnify="1.7"
  data-zoom-enabled="{{ image_zoom_enabled }}"
>
  <div class="product-page--wrapper">
    {% if show_breadcrumbs %}
      <div class="product-page--header" data-mq="medium-large">
        {% render 'breadcrumbs' %}
      </div>
    {% endif %}

    <div
      class="product-page--main-content"
      itemscope
      itemtype="https://schema.org/Product"
    >
      <div class="product-page--left-column">
        <div class="product-media--wrapper" data-media-type="{{ current_variant.featured_media.media_type }}">
          {% if product.media.size > 0 %}
            <modal-root class="modal--root" data-modal-view="product-media">
              {{ featured_media }}

              {% if modal_enabled %}
                <div class="product-page--modal-media">
                  {{ modal_media }}
                </div>
              {% endif %}
            </modal-root>
            <div class="btn_group">
              <img class="prev_btn" src="{{'prev_btn.png' | asset_url }}">
              <img class="next_btn" src="{{'next_btn.png' | asset_url }}">
            </div>
            <div class="custom_scroll--bar"><div class="scroll--thumb" style="width: {{100 | divided_by: product.media.size}}%;"></div></div>
          {% else %}
            {% render 'placeholder', type: 'product', aspect_ratio: 1, placeholder_index: 1 %}

          {% endif %}
        </div>

        {% if product.media.size > 1 and thumbnails_added %}
          <div class="product-page--thumbs" data-position="image-column">
            {%
              render "product--media",
              media_view: "thumb-container",
              thumb_html: thumb_html,
              direction: "row",
              product: product
            %}
          </div>
        {% endif %}
      </div>
      <div class="product-page--center">
        {{ left_column_blocks }}
        {{ right_column_blocks }}
      </div>
      {% comment %} <div class="product-page--right-column">
      </div> {% endcomment %}
    </div>
  </div>
  
</product-root>

<div class="product-sticky--root">
  <div class="product--wrapper page-width">
    <div class="product-image-title">
      <img src="{{ product.featured_media.preview_image | img_url: '90x84' }}">
      <h5 class="product-title">{{ product.title }}</h5>
    </div>
    <div class="product-price-atc">
      <div class="product-price--wrapper">
        <div class="product-price--original ff-body" data-item='accent-text'>
          {{ current_variant.price | money_without_trailing_zeros }}
        </div>
    
        <div
          class="product-price--compare ff-body"
          data-item='light-accent-text'
          {% unless compare_enabled %}
            style="display:none;"
          {% else %}
            style="display:inline-block;"
          {% endunless %}
        >
          {% if compare_enabled %}
            {{ current_variant.compare_at_price | money_without_trailing_zeros }}
          {% endif %}
        </div>
      </div>
      {%
        render 'product-buy-buttons',
        id: product_id,
        product: product,
        view_set_link: section.settings.view_set_link,
        smart_payment_enabled: block.settings.smart-payment-enabled
      %}
    </div>
  </div>
</div>

{%
  render "product--scripts",
  product: product,
  id: product_id,
  load_model: load_model,
  load_video: load_video
%}

