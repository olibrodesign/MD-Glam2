{%- liquid
  comment
    Translations
  endcomment

  assign skip_link_t = 'sections.featured_collection.skip_link' | t

  comment
    Variables
  endcomment

  assign bg_color = section.settings.background-color
  assign display_type = section.settings.display-type
  assign heading = section.settings.heading | escape
  assign light_text = section.settings.light-text
  assign link_text = section.settings.link-text
  assign link_url = section.settings.link-url
  assign product_list = section.settings.product-list
  assign product_per_row_desktop = section.settings.products-per-row--desktop
  assign product_per_row_mobile = section.settings.products-per-row--mobile
  assign product_limit = product_per_row_desktop | times: 2
  assign spacing_above = section.settings.spacing-above
  assign spacing_below = section.settings.spacing-below
  assign unique_handle = 'featured-products--' | append: section.id

  assign onboarding = false
  if product_list == blank
    assign onboarding = true
  endif
-%}

<featured-collection-root
  class="featured-collection--root page-width"
  data-section-id="{{ section.id }}"
  data-background-color="{{ bg_color }}"
  data-container="section"
  data-display-type="{{ display_type }}"
  data-light-text="{{ light_text }}"
  data-section-type="index_featured_products"
  data-spacing-above="{{ spacing_above }}"
  data-spacing-below="{{ spacing_below }}"
  style="display:grid;"
>
  {% if heading != blank %}
    <div class="featured-collection--header page-width" data-container="block">
      <div class="featured-collection--header-text">
        <h2 class="featured-collection--title {% if section.settings.heading_size == 'large' %}
          lg--f2
          {% else %}
            lg--f56
        {% endif %}  sm--f40 ff-heading uppercase " data-item="section-heading">
          {{ heading }}
        </h2>
      </div>
      {% if section.settings.view_all_btn_text != blank %}
        <a class="view_all_btn lg--f16 sm--f16 ff-body uppercase" href="{{ section.settings.view_all_btn_url }}">{{ section.settings.view_all_btn_text }}</a>   
      {% endif %}
    </div>
  {% endif %}

  {% if display_type == 'slider' %}
    <a data-item="a11y-button" href='#featured-products-show-more'>
      {{ skip_link_t }}
    </a>

    <div class="featured-collection--carousel" data-container="panel">
      {% render
        'carousel',
        view: 'product',
        section_id: section.id,
        onboarding: onboarding,
        bg_color: bg_color,
        blocks: product_list,
        blocks_per_slide: 4,
        blocks_per_slide_mobile: 2,
        dot_nav_enabled: true,
        total_blocks: product_list.count,
        total_slides: product_list.count | divided_by: 2,
        spacing_around_blocks: true,
        transition_type: 'slide'
      %}
    </div>

  {% else %}
    <div
      class="featured-collection--grid"
      data-container="panel"
      data-columns="{{ product_per_row_desktop }}"
      data-mobile-columns="{{ product_per_row_mobile }}"
    >
      {% liquid
        if onboarding
          for i in (1..product_limit)
            assign placeholder_index = i
            if i > 6
              assign placeholder_index = i | minus: 6
            endif

            render 'product--item', onboarding: true, unique_handle: unique_handle, placeholder_index: placeholder_index
          endfor

        else
          for product in product_list limit: product_limit
            render 'product--item', product: product, add_to_cart_button: true, add_to_cart_btn_type: section.settings.add_to_cart_btn_type, show_vendor: ture, unique_handle: unique_handle, product_description: true, section_id: section.id
          endfor
        endif
      -%}
    </div>

  {% endif %}

  {% unless link_text == blank %}
    <div data-container="block">
      <div
        id="featured-products-show-more"
        class="featured-collection--show-more"
        data-item="block-link"
      >
        <a href="{{ link_url }}">
          {{ link_text }}
        </a>
      </div>
    </div>
  {% endunless %}
</featured-collection-root>

<script type="module">
  import "{{ 'featured-collection.js' | asset_url }}";
</script>

{% schema %}
{
  "name": "Featured products",
  "settings": [
    {
      "type": "product_list",
      "id": "product-list",
      "label": "Products",
      "limit": 12
    },
    {
      "id": "background-color",
      "label": "Background color",
      "type": "select",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Light", "value": "light" },
        { "label": "Dark", "value": "dark" },
        { "label": "Accent", "value": "accent" }
      ],
      "default": "none"
    },
    {
      "id": "light-text",
      "label": "Use light text color",
      "type": "checkbox",
      "default": false
    },
    {
      "id": "spacing-above",
      "label": "Spacing above",
      "type": "checkbox",
      "default": true
    },
    {
      "id": "spacing-below",
      "label": "Spacing below",
      "type": "checkbox",
      "default": true
    },
    {
      "id": "display-type",
      "label": "Display type",
      "type": "radio",
      "options": [
        { "label": "Slider", "value": "slider" },
        { "label": "Grid", "value": "grid" }
      ],
      "default": "slider"
    },
    {
      "label": "Products per row (desktop)",
      "id": "products-per-row--desktop",
      "type": "radio",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "3",
      "info": "Applies to grid display only"
    },
    {
      "label": "Product per row (mobile)",
      "id": "products-per-row--mobile",
      "type": "radio",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ],
      "default": "2",
      "info": "Applies to grid display only"
    },
    {
      "type": "select",
      "id": "add_to_cart_btn_type",
      "label": "Add to cart button type",
      "options": [
        {
          "group": "type",
          "value": "default",
          "label": "Default"
        },{
          "group": "type",
          "value": "stroke",
          "label": "Stroke"
        }
      ],
      "default": "default"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "id": "heading",
      "label": "Heading",
      "type": "text",
      "default": "Featured products"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading font size",
      "options": [
        {
          "group": "size",
          "value": "large",
          "label": "Large"
        },{
          "group": "size",
          "value": "normal",
          "label": "Normal"
        }
      ],
      "default": "large"
    },
    {
      "type": "url",
      "id": "link-url",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link-text",
      "label": "Link text"
    },
    {
      "type": "text",
      "id": "view_all_btn_text",
      "label": "Button text",
      "default": "View all"
    },
    {
      "type": "url",
      "id": "view_all_btn_url",
      "label": "Button url"
    }
  ],
  "presets": [
    {
      "name": "Featured products"
    }
  ]
}
{% endschema %}