<section id="section--{{section.id}}">
    <div class="text-image-blocks--wrapper page-width">
        <div class="text--wrapper {% if section.blocks.size > 1 %}
            sticky--wrapper
        {% endif %}">
            {% if section.settings.section_no != blank %}
                <div class="section_no">{{ section.settings.section_no }}</div>
            {% endif %}
            {% if section.settings.heading_line_1 != blank %}
                <h2 class="ff-heading uppercase lg--f2 sm--f40 {% if section.settings.heading_line_1_right == true %}
                    text-align-right
                {% endif %}" style="text-transform: {% unless section.settings.uppercase %}
                    unset !important;
                    {% else %}
                      uppercase;
                  {% endunless %}">{{ section.settings.heading_line_1 }}</h2>
            {% endif %}
            {% if section.settings.heading_line_2 != blank %}
                <h2 class="ff-heading uppercase lg--f2  sm--f40 {% if section.settings.heading_line_2_right == true %}
                    text-align-right
                {% endif %}" style="text-transform: {% unless section.settings.uppercase %}
                    unset !important;
                    {% else %}
                      uppercase;
                  {% endunless %}">{{ section.settings.heading_line_2 }}</h2>
            {% endif %}
            {% if section.settings.heading_line_3 != blank %}
                <h2 class="ff-heading uppercase lg--f2  sm--f40 {% if section.settings.heading_line_3_right == true %}
                    text-align-right
                {% endif %}" style="text-transform: {% unless section.settings.uppercase %}
                    unset !important;
                    {% else %}
                      uppercase;
                  {% endunless %}">{{ section.settings.heading_line_3 }}</h2>
            {% endif %}
            {% if section.settings.subheading != blank %}
                <h3 class="ff-heading uppercase lg--f46 sm--f40{% if section.settings.subheading_align_right == true %}
                    text-align-right
                {% endif %}" style="text-transform: {% unless section.settings.uppercase %}
                    unset !important;
                    {% else %}
                      uppercase;
                  {% endunless %}">{{ section.settings.subheading }}</h2>
            {% endif %}
            {% if section.settings.text != blank %}
                <div class="text {% if section.settings.text_align_right == true %}
                    text-align-right
                {% endif %}">{{ section.settings.text }}</div>
            {% endif %}
        </div>
        <div class="image--wrapper">
            {% for block in section.blocks %}
                {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | img_url: '700x'}}" alt="{{ block.settings.image.alt | escape }}">
                {% endif %}
            {% endfor %}
        </div>
       
    </div>
    
</section>
<style>
    #section--{{section.id}} .text-image-blocks--wrapper {
        {% if section.settings.text_position == "left" %}
            flex-direction: row;
            {% else %}
            flex-direction: row-reverse;  
        {% endif %}
    }
    {% comment %} 
    @media (max-width: 767px) {
        #section--{{section.id}} .text-image-blocks--wrapper {
            {% if section.settings.text_position == "left" %}
                flex-direction: column-reverse;
                {% else %}
                flex-direction: column;  
            {% endif %}
        }
    } {% endcomment %}
    {% if section.settings.section_no != blank %}
        #section--{{section.id}} .text-image-blocks--wrapper .text--wrapper{
            padding-left: 18px;
            padding-top: 18px;
            position: relative;
        }
        #section--{{section.id}} .text-image-blocks--wrapper .section_no{
            position: absolute;
            top: 0;
            left: 0;
            font-family: 'Spectral';
            font-style: normal;
            font-weight: 275;
            font-size: 16px;
            line-height: 130%;
        }
        
    {% endif %}
    #section--{{section.id}} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom}}px;
    }
    @media (max-width: 1024px) {
        #section--{{section.id}} {
            padding-top: {{ section.settings.padding_top | times: 0.7 }}px;
            padding-bottom: {{ section.settings.padding_bottom | times: 0.7}}px;
        }
    }
    @media (max-width: 767px) {
        #section--{{section.id}} {
            padding-top: {{ section.settings.padding_top_mobile }}px;
            padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
        }
    }
    #section--{{section.id}} .text--wrapper{
        {% if section.settings.text_position == "left" %}
            padding-right: 9%;
        {% endif %}
    }
    #section--{{section.id}} .image--wrapper{
        {% if section.settings.text_position == "left" %}
            padding-left: 20px;
            {% else %}
            padding-right: 9%; 
        {% endif %}
    }
</style>
{% schema %}
    {
        "name": "Text with image blocks",
        "class": "text-image-blocks",
        "settings": [
            {
                "type": "header",
                "content": "Title style"
            },
            {
                "type": "text",
                "id": "section_no",
                "label": "Section number"
            },
            {
                "type": "text",
                "id": "heading_line_1",
                "label": "First line heading"
            },
            {
                "type": "checkbox",
                "id": "heading_line_1_right",
                "label": "First line heading align right",
                "default": false
            },
            {
                "type": "text",
                "id": "heading_line_2",
                "label": "Second line heading"
            },
            {
                "type": "checkbox",
                "id": "heading_line_2_right",
                "label": "Second line heading align right",
                "default": false
            },
            {
                "type": "text",
                "id": "heading_line_3",
                "label": "Third line heading"
            },
            {
                "type": "checkbox",
                "id": "heading_line_3_right",
                "label": "Third line heading align right",
                "default": false
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            },
            {
                "type": "checkbox",
                "id": "subheading_align_right",
                "label": "Subheading align right",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "uppercase",
                "label": "Uppercase title",
                "default": true
            },
            {
                "type": "html",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "checkbox",
                "id": "text_align_right",
                "label": "Text align right",
                "default": true
            },
            {
                "type": "select",
                "id": "text_position",
                "label": "Text position",
                "options": [
                    {
                        "group": "position",
                        "value": "left",
                        "label": "Left"
                    },
                    {
                        "group": "position",
                        "value": "right",
                        "label": "Right"
                    }
                ],
                "default": "left"
            },
            {
                "type": "header",
                "content": "Padding on desktop",
                "info": "You can adjust the padding on desktop"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 200,
                "step": 10,
                "unit": "px",
                "label": "Top Padding",
                "default": 50
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 200,
                "step": 10,
                "unit": "px",
                "label": "Bottom Padding",
                "default": 50
            },
            {
                "type": "header",
                "content": "Padding on mobile",
                "info": "You can adjust the padding on mobile"
            },
            {
                "type": "range",
                "id": "padding_top_mobile",
                "min": 0,
                "max": 200,
                "step": 10,
                "unit": "px",
                "label": "Top Padding",
                "default": 20
            },
            {
                "type": "range",
                "id": "padding_bottom_mobile",
                "min": 0,
                "max": 200,
                "step": 10,
                "unit": "px",
                "label": "Bottom Padding",
                "default": 20
            }
        ],
        "blocks": [
            {
                "type": "image",
                "name": "Image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Text with image blocks"
            }
        ]
        
    }
{% endschema %}
