	{%- liquid
	  comment
		"Variables"
	  endcomment

	  assign bg_color = section.settings.background-color
	  assign container_width = section.settings.container-width
	  assign form_id = 'contact_form_' | append: section.id
	  assign facebook_url = settings.social--facebook--url
	  assign heading = section.settings.heading
	  assign instagram_url = settings.social--instagram--url
	  assign light_text = section.settings.light-text
	  assign pinterest_url = settings.social--pinterest--url
	  assign show_social_sharing = section.settings.show-social-sharing
	  assign store_address = section.settings.store-address
	  assign store_hours = section.settings.store-hours
	  assign spacing_above = section.settings.spacing-above
	  assign spacing_below = section.settings.spacing-below
	  assign tiktok_url = settings.social--tiktok--url
	  assign twitter_url = settings.social--twitter--url
	  assign vimeo_url = settings.social--vimeo--url
	  assign youtube_url = settings.social--youtube--url

	  if facebook_url == blank and instagram_url == blank and pinterest_url == blank and tiktok_url == blank and twitter_url == blank and vimeo_url == blank and youtube_url == blank
		assign show_social_sharing = false
	  endif

	  assign button_type = 'button'
	  if light_text
		assign button_type = 'inverted-secondary-button'
	  endif
	-%}

	<div
	  class="contact--root"
	  data-section-id="{{ section.id }}"
	  data-background-color="{{ bg_color }}"
	  data-container-width="{{ container_width }}"
	  data-light-text="{{ light_text }}"
	  data-spacing-above="{{ spacing_above }}"
	  data-spacing-below="{{ spacing_below }}"
	>

		<h1 class="contactUsMainTitle" "> Contact Us </h1>	
		
	  <div class="contact--wrapper">        
		<div class="grid-container" >
		  <div class="grid-item" >
			<h2 class="contactAddressTitle"> For customer service and order inquiries, please contact us at: </h2>
			<div class="contactAdress">
				<div class="contactSec1" > 
					<div class="contactEmail" >
						<div class="emailTitle smallTitle" >EMAIL</div>
						<div class="emailaddress smallDes" >help@mdglam.com</div>
						<div class="emailtime" >7am-3:30pm PST, 5 Days a week</div>
					</div>
					<div class="contactPhone" >
						<div class="phoneTitle smallTitle" >PHONE</div>
						<div class="phonenumber smallDes" >1 (855) 768-0555</div>
					</div>
				</div>
				<div class="contactSec2" >
					<div class="contactOffice smallTitle" >
						<div class="officeTitle" >Office</div>
						<div class="officeaddress smallDes" >223 W Palm Ave, Burbank CA, 91502</div>
					</div>
				</div>
			</div>
		  </div>
		  <div class="grid-item contact-form-grid" >
			{% unless heading == blank %}
			  <div class="contact--header">
				<h2 class="contact--title" data-item="section-heading">
				  {{ heading }}
				</h2>
			  </div>
			{% endunless %}
			{%
			  render 'contact-form',
			  store_address: store_address,
			  store_hours: store_hours,
			  form_id: form_id,
			  button_type: button_type,
			  show_social_sharing: show_social_sharing
			%}
			
			<div class="contactBelowText">For quality assurance purposes, email transcripts and chat session transcripts are retained and monitored. For your protection and security, we do not take orders via email or chat. Customer Care representatives will not request your credit card number or any other sensitive information via email and chat. Orders may be placed securely on this website or by calling our Customer Care Center. We look forward to assisting you!</div>
		  </div>
		</div>
	  </div>
