	<script>
	jQuery(document).ready(function(){
		jQuery('form.contact-form .submitButton').click(function(event){
			var error = 0;
			var con_name = jQuery('.con-name').val();		
			if(con_name == ''){
				error = 1;
				jQuery('.con-name').addClass('inputError');
			}else{
				jQuery('.con-name').removeClass('inputError');
			}
			
			var con_email = jQuery('.con-email').val();
			if(con_email == ''){
				error = 1;
				jQuery('.con-email').addClass('inputError');
			}else{
				jQuery('.con-email').removeClass('inputError');
			}
			
			var con_phoneNumber = jQuery('.con-phoneNumber').val();		
			if(con_phoneNumber == ''){
				error = 1;
				jQuery('.con-phoneNumber').addClass('inputError');
			}else{
				jQuery('.con-phoneNumber').removeClass('inputError');
			}
			
			var con_msg = jQuery('.con-msg').val();	
			if(con_msg == ''){
				error = 1;
				jQuery('.con-msg').addClass('inputError');
			}else{
				jQuery('.con-msg').removeClass('inputError');
			}
			
			if(jQuery('.con-agree').is(':checked')){
				jQuery('.agreeError').hide();
			}else{
				error = 1;
				jQuery('.agreeError').show();
			}
			if(error == 0){
				jQuery('.submitButtonReal').trigger('click');
			}
			
		});
		
		jQuery('form.contact-form input.con-name').on('change keyup', function(){
			if(jQuery(this).val() != ''){
				jQuery(this).removeClass('inputError');
				jQuery(this).attr("placeholder", "Name*");
			}else{
				jQuery(this).addClass('inputError');
				jQuery(this).attr("placeholder", "Please enter your name*");
			}
		});
		
		jQuery('form.contact-form input.con-email').on('change keyup keydown', function(){
			if(jQuery(this).val() != ''){
				jQuery(this).removeClass('inputError');
				jQuery(this).attr("placeholder", "Email*");
			}else{
				jQuery(this).addClass('inputError');
				jQuery(this).attr("placeholder", "Please enter your email*");
			}
		});
		
		jQuery('form.contact-form input.con-phoneNumber').on('change keyup keydown', function(){
			if(jQuery(this).val() != ''){
				jQuery(this).removeClass('inputError');
				jQuery(this).attr("placeholder", "Phone Number*");
			}else{
				jQuery(this).addClass('inputError');
				jQuery(this).attr("placeholder", "Please enter your phone number*");
			}
		});
		
		jQuery('form.contact-form textarea.con-msg').on('change keyup keydown', function(){
			if(jQuery(this).val() != ''){
				jQuery(this).removeClass('inputError');
				jQuery(this).attr("placeholder", "Message*");
			}else{
				jQuery(this).addClass('inputError');
				jQuery(this).attr("placeholder", "Please enter your message*");
			}
		});
		
		jQuery('form.contact-form input.con-agree').on('click', function(){
			if(jQuery(this).is(':checked')){
				jQuery('.agreeError').hide();
			}else{
				jQuery('.agreeError').show();
			}
		});
		
		
	});
	</script>
